{
  "host": "0.0.0.0",
  "port": 9999,
  "routes": {
    "/hello": {
      "method": "GET",
      "params": [],
      "return_stdout": true,
      "commands": [
        {
          "command": "echo hello world",
          "stdin": null,
          "pipe_to_stdin": true,
          "expected_return_code": 0,
          "return_stderr_on_error": true
        }
      ]
    },
    "/date": {
      "method": "GET",
      "commands": [
        {
          "command": "date /t"
        }
      ]
    }
  },
  "default_responses": {
    "404": {
      "type": "string",
      "text": "This path was not found :)"
    },
    "500": {
      "type": "file",
      "location": "500.txt",
      "mime_type": "text/plain"
    }
  }
}